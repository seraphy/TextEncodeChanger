<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>full-zip</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <!-- README, Licenseのコピー -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>README.md</include>
                <include>LICENSE</include>
            </includes>
        </fileSet>
        <!-- 実行バッチのコピー (Java11用) -->
        <fileSet>
            <directory>src/assembly</directory>
            <outputDirectory>.</outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>run.bat</include>
                <include>run11.bat</include>
            </includes>
        </fileSet>
        <!-- 生成jarのコピー -->
        <fileSet>
            <directory>target</directory>
            <outputDirectory>.</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>*.jar</include>
                <include>*.exe</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
            </excludes>
        </fileSet>
        <!-- 依存jar(モジュール)のコピー -->
        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>